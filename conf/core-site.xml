<configuration>
    
    <property>
      <name>adl.events.tracking.clustername</name>
      <value><yourcluster>.eastus2.cloudapp.azure.com</value>
    </property>
    
    <property>
      <name>adl.events.tracking.clustertype</name>
      <value>Spark</value>
    </property>
    
    <property>
      <name>adl.events.tracking.source</name>
      <value>hdi</value>
    </property>
    
    <property>
