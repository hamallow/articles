      <value>/usr/lib/hdinsight-common/scripts/decrypt.sh</value>
    </property>
    
    <property>
      <name>fs.defaultFS</name>
      <value>adl://home</value>
      <final>true</final>
    </property>
    
    <property>
      <name>fs.trash.interval</name>
      <value>360</value>
    </property>
    
    <property>
      <name>ha.failover-controller.active-standby-elector.zk.op.retries</name>
